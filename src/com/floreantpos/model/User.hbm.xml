<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.floreantpos.model">
	<class name="com.floreantpos.model.User" table="USERS" lazy="false">
	
		<id name="autoId" column="AUTO_ID" type="java.lang.Integer">
			<generator class="identity"></generator>
		</id>
		
		<version name="modifiedTime" column="MODIFIED_TIME" type="timestamp"></version>
		
		<property name="userId" column="USER_ID" type="java.lang.Integer" />
		<!--property name="userType" column="USER_TYPE" type="string" length="20" /-->
		
		
		<property name="password" type="string" column="USER_PASS" length="16" not-null="true"></property>
		<property name="firstName" type="java.lang.String" column="FIRST_NAME" length="30" />
		<property name="lastName" type="java.lang.String" column="LAST_NAME" length="30" />
		<property name="ssn" type="java.lang.String" column="SSN" not-null="true" length="30" />
		<!--property name="image" type="java.sql.Blob" column="IMAGE" length="1048576" /-->
		<property name="costPerHour" type="java.lang.Double" column="COST_PER_HOUR" />
		<property name="clockedIn" type="java.lang.Boolean" column="CLOCKED_IN" />
		<property name="lastClockInTime" type="java.util.Date" column="LAST_CLOCK_IN_TIME"></property>
		<!-- Associations -->
		<many-to-one name="currentShift" class="Shift" column="SHIFT_ID"></many-to-one>
		<many-to-one name="currentTerminal" class="Terminal"></many-to-one>
		<many-to-one name="newUserType" class="UserType" column="N_USER_TYPE"/>

	</class>
</hibernate-mapping>
