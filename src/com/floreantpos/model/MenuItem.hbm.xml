<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.floreantpos.model">

	<class name="com.floreantpos.model.MenuItem" table="MENU_ITEM" lazy="false" optimistic-lock="version">
		
		<id name="id" type="java.lang.Integer" column="ID">
			<generator class="identity" />
		</id>
		
		<version name="modifiedTime" column="MODIFIED_TIME" type="timestamp"></version>

		<property name="name" type="java.lang.String" column="NAME" not-null="true" length="30" />
		<property name="price" type="java.lang.Double" column="PRICE" not-null="true" length="52" />
		<property name="discountRate" type="java.lang.Double" column="DISCOUNT_RATE" length="52" />
		<property name="visible" type="java.lang.Boolean" column="VISIBLE">
			<meta attribute="defaultValue">true</meta>
		</property>
		
		<!-- uni-directional many-to-one association to FoodGroup -->
		<many-to-one name="parent" class="com.floreantpos.model.MenuGroup">
			<column name="GROUP_ID" />
		</many-to-one>

		<list name="shifts" inverse="false" cascade="all" table="MENUITEM_SHIFT" lazy="true">
			<key column="MENUITEM_ID"/>
			
			<list-index column="SHIFT_ORDER" />
			<one-to-many class="MenuItemShift"/>
		</list>
		
		<list name="menuItemModiferGroups" lazy="true" inverse="false" cascade="all">
			<key>
				<column name="MENUITEM_MODIFIERGROUP_ID" />
			</key>
			
			<list-index column="GR_ORDER" />
			
			<one-to-many class="MenuItemModifierGroup"/>
		</list>
		
		<!-- uni-directional many-to-one association to Tax -->
		<many-to-one name="tax" class="com.floreantpos.model.Tax" lazy="false">
			<column name="TAX_ID" />
		</many-to-one>

	</class>
</hibernate-mapping>
