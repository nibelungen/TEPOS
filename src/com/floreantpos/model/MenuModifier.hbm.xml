<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="com.floreantpos.model">
	<class name="com.floreantpos.model.MenuModifier" table="MENU_MODIFIER" optimistic-lock="version" lazy="false">

		<id name="id" type="java.lang.Integer" column="ID">
			<generator class="identity" />
		</id>

		<version name="modifiedTime" column="MODIFIED_TIME" type="timestamp"></version>

		<property name="name" type="java.lang.String" column="NAME" length="20" />
		<property name="price" type="java.lang.Double" column="PRICE" length="52" />
		<property name="extraPrice" type="java.lang.Double" column="EXTRA_PRICE" length="52" />
		<property name="enable" type="java.lang.Boolean" column="ENABLE" index="modifierenabled" />
		<property name="shouldPrintToKitchen" type="java.lang.Boolean" column="PRINT_TO_KITCHEN">
			<meta attribute="defaultValue">true</meta>
		</property>
		<!-- Associations -->

		<many-to-one name="modifierGroup" class="MenuModifierGroup" lazy="false">
			<column name="GROUP_ID"></column>
		</many-to-one>

		<many-to-one name="tax" class="Tax" lazy="false">
			<column name="TAX_ID"></column>
		</many-to-one>

	</class>
</hibernate-mapping>
