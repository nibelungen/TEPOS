<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.floreantpos.model">
    <class name="com.floreantpos.model.Currency" table="CURRENCY" lazy="false" optimistic-lock="version">
        
        <id name="id" type="java.lang.Integer" column="ID">
            <generator class="assigned"/>
        </id>
        
        <version name="modifiedTime" column="MODIFIED_TIME" type="timestamp"/>
        
        <property name="name" type="java.lang.String" column="NAME" not-null="true" length="20"/>
        <property name="symbol" type="java.lang.String" column="SYMBOL" length="10"/>
        <property name="dollarExchangeRate" type="java.lang.Double" column="DOLLAR_EXCHANGE_RATE" length="52">
            <meta attribute="defaultValue">1</meta>
        </property>
        <!-- Associations -->
    </class>
</hibernate-mapping>
