<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
    
    <hibernate-mapping package="com.floreantpos.model">
        <class name="TicketCouponAndDiscount" table="TICKET_COUPON_DISCOUNT" lazy="false">
            <id name="id" column="ID" type="java.lang.Integer">
                <generator class="identity"></generator>
            </id>
            
            <property name="couponAndDiscountId" column="COUPON_DISCOUNT_ID" type="java.lang.Integer"></property>
            <property name="name" column="NAME" type="string" length="30" ></property>
            <property name="type" column="TYPE" type="java.lang.Integer"></property>
            <property name="value" column="VALUE" type="java.lang.Double"></property>
            <!--property name="amount" column="AMOUNT" type="java.lang.Double"></property-->
        </class>
   </hibernate-mapping>