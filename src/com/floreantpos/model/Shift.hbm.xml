<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
    
    <hibernate-mapping package="com.floreantpos.model">
        <class name="Shift" table="SHIFT" lazy="false">
            <id name="id" column="ID" type="java.lang.Integer">
                <generator class="identity"></generator>
            </id>
            
            <property name="name" column="NAME" type="string" length="60" not-null="true" unique="true"></property>
            <property name="startTime" column="START_TIME" type="java.util.Date"></property>
            <property name="endTime" column="END_TIME" type="java.util.Date"></property>
            <property name="shiftLength" column="SHIFT_LEN" type="java.lang.Long"></property>
        </class>
   </hibernate-mapping>