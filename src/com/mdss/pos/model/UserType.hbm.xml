<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.mdss.pos.model">
	<class name="com.mdss.pos.model.UserType" table="USER_TYPE" lazy="false">
	
		<id name="id" column="ID" type="java.lang.Integer">
			<generator class="identity"></generator>
		</id>
		
		<property name="name" type="java.lang.String" column="P_NAME" length="60" />

		<set name="permissions" table="USER_USER_PERMISSION" lazy="false" inverse="false" cascade="all">
			<key column="permissionId"/>

			<many-to-many class="UserPermission"></many-to-many>
		</set>
		
	</class>
</hibernate-mapping>
