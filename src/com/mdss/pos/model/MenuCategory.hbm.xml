<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.mdss.pos.model">
	<class name="com.mdss.pos.model.MenuCategory" table="MENU_CATEGORY" lazy="false" optimistic-lock="version">
		
		<id name="id" type="java.lang.Integer" column="ID">
			<generator class="identity" />
		</id>
		
		<version name="modifiedTime" column="MODIFIED_TIME" type="timestamp"/>

		<property name="name" type="java.lang.String" column="NAME" not-null="true" length="20" />
		<!-- <property name="image" type="java.sql.Blob" column="IMAGE" length="1048576" />-->
		<property name="visible" type="java.lang.Boolean" column="VISIBLE" index="food_category_visible"/>
		<property name="beverage" type="java.lang.Boolean" column="BEVERAGE"/>
		
		<!-- Associations -->
		<set name="menuGroups" inverse="true" cascade="none" lazy="true">
			<key column="MENU_CATEGORY_ID"></key>
			
			<one-to-many class="MenuGroup"/>
		</set>

	</class>
</hibernate-mapping>
