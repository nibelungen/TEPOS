<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
    
    <hibernate-mapping package="com.mdss.pos.model">
        <class name="MenuItemShift" table="MENUITEM_SHIFT" lazy="false">
            <id name="id" column="ID" type="java.lang.Integer">
                <generator class="identity"></generator>
            </id>
            
            <property name="shiftPrice" column="SHIFT_PRICE" type="java.lang.Double"/>
            
            <many-to-one name="shift" class="Shift">
            	<column name="SHIFT_ID"></column>
            </many-to-one>
        </class>
   </hibernate-mapping>
