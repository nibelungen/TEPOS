<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
    
    <hibernate-mapping package="com.mdss.pos.model">
        <class name="CouponAndDiscount" table="COUPON_AND_DISCOUNT" lazy="false">
            <id name="id" column="ID" type="java.lang.Integer">
                <generator class="identity"></generator>
            </id>
            
            <property name="name" column="NAME" type="string" length="30" ></property>
            <property name="type" column="TYPE" type="java.lang.Integer"></property>
            <property name="value" column="VALUE" type="java.lang.Double"></property>
            <property name="expiryDate" column="EXPIRY_DATE" type="java.util.Date"></property>
            <property name="disabled" column="DISABLED" type="java.lang.Boolean"></property>
            <property name="neverExpire" column="NEVER_EXPIRE" type="java.lang.Boolean"></property>
        </class>
   </hibernate-mapping>