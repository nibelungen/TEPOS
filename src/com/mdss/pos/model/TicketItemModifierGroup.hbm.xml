<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.mdss.pos.model">

	<class name="com.mdss.pos.model.TicketItemModifierGroup" table="TICKETITEM_MODIFIERGROUP" lazy="false" optimistic-lock="version">
		
		<id name="id" type="java.lang.Integer" column="ID">
			<generator class="identity" />
		</id>

		<version name="modifiedTime" column="MODIFIED_TIME" type="timestamp"></version>
		
		<property name="modifierGroupId" type="java.lang.Integer" column="GROUP_ID" />
		<property name="minQuantity" type="java.lang.Integer" column="MIN_QUANTITY" />
		<property name="maxQuantity" type="java.lang.Integer" column="MAX_QUANTITY"/>
		
		<many-to-one name="parent" class="TicketItem"/>

		<list name="ticketItemModifiers" lazy="true" inverse="false" cascade="all">
			<key>
				<column name="TICKETITEMMODIFIERGROUP_ID" />
			</key>
			
			<list-index column="ITEM_ORDER"></list-index>
			
			<one-to-many class="com.mdss.pos.model.TicketItemModifier" />
		</list>
	</class>
</hibernate-mapping>
